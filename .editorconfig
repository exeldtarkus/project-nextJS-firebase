# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Match JSON files
[*.json]
indent_style = space
indent_size = 2

# Match JavaScript and TypeScript files
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

# Match JSX and TSX files
[*.jsx]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

# Match CSS, SCSS, and styled-components files
[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

# Match Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Match YAML files
[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
